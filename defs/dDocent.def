DistType "debian"
MirrorURL "http://ftp.us.debian.org/debian/"
OSVersion "stable"

Setup
Bootstrap

RunCmd apt-get update

InstallPkgs vim \
    git \
    curl \
    gcc \
    g++ \
    cmake \
    wget \
    zlib1g-dev \
    python \
    bzip2 \
    libncurses5-dev \
    unzip \
    gawk \
    openjdk-7-jre

RunCmd bash -c "wget https://ftp.gnu.org/gnu/parallel/parallel-20160822.tar.bz2 && \
    tar xvf parallel-20160822.tar.bz2 && \
    cd parallel-20160822 && \
    ./configure && make && make install"

Cleanup
